# =============================================================================
# PropManage Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -----------------------------------------------------------------------------
# AI/LLM Configuration (Choose one or multiple)
# -----------------------------------------------------------------------------

# OpenAI (for ChatGPT-style responses)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (alternative to OpenAI)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# -----------------------------------------------------------------------------
# Payment Processing (Optional - for rent collection)
# -----------------------------------------------------------------------------

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# -----------------------------------------------------------------------------
# Email Service (Choose one)
# -----------------------------------------------------------------------------

# Resend (recommended for Next.js)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key

# SendGrid (alternative)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key

# -----------------------------------------------------------------------------
# SMS/Communication (Optional)
# -----------------------------------------------------------------------------

# Twilio (for SMS notifications)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# -----------------------------------------------------------------------------
# File Storage (Optional - if not using Supabase Storage)
# -----------------------------------------------------------------------------

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# -----------------------------------------------------------------------------
# Document Signing (Optional)
# -----------------------------------------------------------------------------

# DocuSign
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Vercel Analytics (automatically configured on Vercel)
# No configuration needed

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------

# JWT Secret (for additional token signing if needed)
JWT_SECRET=your_random_secret_key_here

# Session Secret
SESSION_SECRET=your_random_session_secret

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_SMS=false
NEXT_PUBLIC_ENABLE_DOCUMENT_SIGNING=false
